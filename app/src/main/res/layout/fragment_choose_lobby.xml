<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lobby_background"
    android:orientation="horizontal"
    tools:context=".view.fragments.ChooseLobbyFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lobby_container"
        android:layout_width="545dp"
        android:layout_height="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stat_of_menu"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:background="@drawable/public_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-9dp" />

    <Button
        android:id="@+id/reload_lobbies_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:adjustViewBounds="true"
        android:background="@drawable/reload_pic_button1dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Button
        android:id="@+id/private_games"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reload_lobbies_btn" /-->

    <Button
        android:id="@+id/new_lobby"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/reload_lobbies_btn"
        android:text="@string/create_lobby"
        android:textSize="20sp"/>

    <!--Button
        android:id="@+id/clear_lobbies"
        android:text="@string/clear"
        android:textSize="20sp"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_lobby" /-->

    <Button
        android:id="@+id/btn_navigate_to_main_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>